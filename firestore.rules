rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // פונקציות עזר
    // ============================================
    
    // בדיקה אם המשתמש מחובר
    function isSignedIn() {
      return request.auth != null;
    }
    
    // בדיקה אם המשתמש הוא הבעלים
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ============================================
    // כללים למסמכי משתמשים - users collection
    // ============================================
    match /users/{userId} {
      // קריאה וכתיבה רק למשתמש עצמו
      allow read, write: if isSignedIn() && isOwner(userId);
      
      // תת-קולקציות (הגדרות)
      match /settings/{settingId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // כללים למקצועות - subjects collection
    // ============================================
    match /subjects/{userId} {
      // המשתמש יכול לקרוא ולכתוב רק את המקצועות שלו
      allow read, write: if isSignedIn() && isOwner(userId);
      
      // תת-קולקציה של פריטים
      match /items/{itemId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // כללים למשימות - homework collection
    // ============================================
    match /homework/{userId} {
      // המשתמש יכול לקרוא ולכתוב רק את המשימות שלו
      allow read, write: if isSignedIn() && isOwner(userId);
      
      // תת-קולקציה של פריטים
      match /items/{itemId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // כללים לסשני לימוד - study-sessions collection
    // ============================================
    match /study-sessions/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      match /sessions/{sessionId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // כללים לגמיפיקציה - gamification collection
    // ============================================
    match /gamification/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      match /achievements/{achievementId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // כללים לתגיות - tags collection
    // ============================================
    match /tags/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      match /items/{tagId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ============================================
    // (אופציונלי) קולקציה משותפת - public collection
    // ============================================
    match /public/{document} {
      // כולם יכולים לקרוא
      allow read: if true;
      // רק מנהלים יכולים לכתוב (אם תרצה להוסיף תכונה כזאת)
      allow write: if false;
    }
    
    // ============================================
    // חסום הכל אחרת
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
